<html>
  <body>
    <%- include("../partials/_navbar.ejs") %>
    <h1>Editing <%= listing.title %></h1>
    <img src="<%= listing.imageURL %>" style="max-width: 500px; border-radius: 8px;"/>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" >
      <h4>

        <label for="title">*Title:</label>
        <input type="text" name="title" id="task" value="<%= listing.title %>" required />
        <br />

        <label for="category">*Category:</label>
        <select name="category" id="status" required>
          <option value="electronics" <% if (listing.category === "electronics") {%> selected <%}%>>Electronics</option>
          <option value="automotive" <% if (listing.category === "automotive") {%> selected <%}%>>Automotive</option>
          <option value="household" <% if (listing.category === "household") {%> selected <%}%>>Household Items</option>
          <option value="gardening" <% if (listing.category === "gardening") {%> selected <%}%>>Gardening</option>
          <option value="toys & games" <% if (listing.category === "toys & games") {%> selected <%}%>>Toys & Games</option>
          <option value="clothing" <% if (listing.category === "clothing") {%> selected <%}%>>Clothing</option>
          <option value="sports & fitness" <% if (listing.category === "sports & fitness") {%> selected <%}%>>Sports & Fitness</option>
          <option value="other" <% if (listing.category === "other") {%> selected <%}%>>Other</option>
        </select>
        <br />

        <label for="price">*Price (BHD):</label>
        <input type="number" name="price" id="price" min="0" value="<%= listing.price %>" required />
        <br />

        <label for="description">*Description:</label>
        <textarea name="description" id="description" rows="4" required><%= listing.description %></textarea>
        <br />

        <label>Contact: <%= user.contact %></label>

        <br />

      <label for="image">image:</label>
      <input type="file" name="image" accept="image/*" />
      <br /><br />


      </h4>
      <button type="submit">Update</button>
      </form>

      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
      <button style="color: red;" type="submit">Delete Listing</button></form>

  </body>
</html>
