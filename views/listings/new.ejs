<html>
  <body>
    <%- include("../partials/_navbar.ejs") %>

    <h1>Add New Listing</h1>
    <p>* indicates mandatory field</p>
    <form method="POST" action="/listings">
    <h4>

      <label for="title">*Title:</label>
      <input type="text" name="title" id="task" required/>
      <br />

      <label for="category">*Category:</label>
      <select name="category" id="status" required>
        <option value="electronics">Electronics</option>
        <option value="automotive">Automotive</option>
        <option value="household">Household Items</option>
        <option value="gardening">Gardening</option>
        <option value="toys & games">Toys & Games</option>
        <option value="clothing">Clothing</option>
        <option value="sports & fitness">Sports & Fitness</option>
        <option value="other">Other</option>
      </select>
      <br />

      <label for="price">*Price (BHD):</label>
      <input type="number" name="price" id="price" min="0" required />
      <br />

      <label for="description">*Description:</label>
      <textarea
        name="description"
        id="description"
        rows="1"
        required
      ></textarea>
      <br />

      <label>Contact: <%= user.contact %></label>
      
      <br />

      <label for="imageURL">*Upload Image:</label>
      <input
        type="text"
        name="imageURL"
        id="imageURL"
        placeholder="Enter image URL here"
        required
      />
      <br />
</h4>
      <button type="submit">Add Listing</button>
    </form>
  </body>
</html>
